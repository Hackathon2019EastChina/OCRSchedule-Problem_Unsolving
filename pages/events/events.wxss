/* pages/events/events.wxss */
.scroll-list {
  background: #fff;
  height: 100%;
  font-family: 'Miscrsoft YaHei'
}

.events {
  background: #2EB3FF;
  position: relative;
  padding: 10px 10px 10px 70px;
  height: 50px;
  margin-bottom: 10px;
}

.del {
  width: 50px;
  height: 50px;
  background: #999;
  text-align: center;
  line-height: 50px;
  border-radius: 50%;
  position: absolute;
  left: 10px;
  transition: 0.5s;
  color: #000;
  background: #fff;
}

.MoreInfo {
  width: 50px;
  height: 50px;
  background: #999;
  text-align: center;
  line-height: 50px;
  border-radius: 50%;
  position: absolute;
  right: 10px;
  transition: 0.5s;
  color: #000;
  background: #fff;
}

.time {
  display: block;
  height: 20px;
  color: #fff;
}
 
.location {
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  color: #fff;
}

.new {
  width: 50px;
  height: 50px;
  background: #999;
  text-align: center;
  line-height: 50px;
  border-radius: 50%;
  position: absolute;
  //left: 10px;
  transition: 0.5s;
  color: #000;
  background: #fff;
}